.box
  .box-inner
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %h2 ログイン
      .box-email
        = f.label :email, "Eメール"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .box-password
        .a-row
          .column-left
            = f.label :password, "パスワード"
          .column-right
            = link_to "パスワードを忘れた場合", new_user_password_path
        = f.password_field :password, autocomplete: "current-password"
      .box-login
        = f.submit "送信する", data: { disable_with: "送信中..." } ,class:"btn btn-primary"
        - if devise_mapping.rememberable?
          .remember
            = f.check_box :remember_me
            = f.label :remember, "ログインしたままにする"
            .box-newusr.pb-5
              %p
              = link_to "アカウントを作成", new_user_registration_path
              = link_to "facebookアカウントでログイン", user_facebook_omniauth_authorize_path
              = link_to "githubアカウントでログイン", user_github_omniauth_authorize_path
              = link_to "googleアカウントでログイン", user_google_oauth2_omniauth_authorize_path
