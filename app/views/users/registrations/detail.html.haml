%div.flex.ml-5
  %table.table
    %thead
      %tr
        %th{:scope => "col"} 利用者名
        %th{:scope => "col"}= @user.name

    %tbody
      %tr
        %th{:scope => "row"} 利用者ID
        %td= @user.id
      
      %tr
        %th{:scope => "row"} メール
        %td= @user.name
      
      %tr
        %th{:scope => "row"} 電話番号
        %td= @user.tel
        
      %tr
        %th{:scope => "row"} 登録日
        %td= @user.created_at.strftime('%Y/%m/%d')
= link_to "編集する", edit_prof_path(@user),class:"btn btn-primary ml-5"


%h4.text-center.mt-5 予約一覧
%table.table.ml-5
  %thead
    %tr
      %th{:scope => "col"} 物件名
      %th{:scope => "col"} 価格
      %th{:scope => "col"} 予約確定日
      %th{:scope => "col"} オーナー名


  %tbody
    - @payments.each do |pay|
      %tr
        %td= pay.placename
        %td= pay.price
        %td= pay.created_at.strftime('%Y/%m/%d')
        %td= pay.owner

%div
  = link_to "アプリの評価をする",  new_feedback_path, class:"btn btn-primary ml-5 mt-5"
